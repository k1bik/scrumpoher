<% if !participant.is_disabled %>
  <div class="d-flex mt-4 flex-wrap justify-content-center align-items-center gap-2">
    <% poker_session.estimates.split(",").each do |estimate| %>
      <%= button_to estimate,
                    poker_session_poker_session_participant_poker_session_participant_estimates_path(poker_session.id, participant.id),
                    method: :post,
                    class: "#{participant.poker_session_participant_estimate&.value == estimate ? "btn-secondary" : "btn-outline-secondary"} btn btn-lg",
                    params: { value: estimate }
      %>
    <% end %>
  </div>
<% end %>

