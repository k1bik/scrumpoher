<%= button_to poker_session.show_estimates ? "Закрыть" : "Открыть", poker_session_toggle_estimates_visibility_path(poker_session.id), class: "btn btn-primary", method: :post %>
<%= button_to "Удалить оценки", poker_session_delete_estimates_path(poker_session.id), class: "btn btn-primary", method: :post %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Оценка</th>
    </tr>
  </thead>
  <tbody>
    <% poker_session.poker_session_participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td>
          <% if poker_session.show_estimates %>
            <%= participant.poker_session_participant_estimate&.value %>
          <% else %>
            <% if participant.poker_session_participant_estimate&.value.present? %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
              </svg>
            <% else %>
              <span></span>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
